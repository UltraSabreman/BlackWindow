<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Cover Window" Height="50" Width="50" MinWidth="30" MinHeight="15" WindowStyle="None" ShowInTaskbar="True" 
        ResizeMode="CanResizeWithGrip" AllowsTransparency="True" Background="Transparent" 
        MouseDown="Window_MouseDown" Topmost ="True">
    <Grid Background="Black" >
        <Button Content="+" Name="AddButton" VerticalAlignment="Top" ToolTip="Add a Window" Padding="0,-2,0,0" FontFamily="Consolas" Click="AddButton_Click" Background="Black" BorderBrush="Gray" Foreground="LightGray" Height="15" HorizontalAlignment="Left" Width="15" />
        <Button Content="-" Name="CloseButton"  VerticalContentAlignment="Center" ToolTip="Close this Window" Padding="0,-2,0,0" FontFamily="Consolas" Click="CloseButton_Click" Background="Black" BorderBrush="Gray" Foreground="LightGray" Margin="15,0,0,0" HorizontalAlignment="Left" Width="15" Height="15" VerticalAlignment="Top"/>
    </Grid>
</Window>
